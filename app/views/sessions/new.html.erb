<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
<div class="card">
  <div class="card-body">
    <div class="container">
      <div class="box">
    <br>
    <%if @error%>
      <div class="alert alert-danger"><%=@error%></div>
    <%end%>
    <%=form_tag sessions_path, class:'form-group' do%>
      <%= text_field_tag :email, nil, class:'form-control', placeholder:'Email Address', :required => true %>
      <br>
      <%= password_field_tag :password , nil, class:'form-control', placeholder:'Password', :required => true %>
      <br>
      <%=submit_tag 'Log In', class: "btn btn-primary"%>
    <%end%>
  </div>
</div>