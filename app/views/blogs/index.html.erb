<h1>All Blogs </h1>




<div class="row">
    <%@blogs.each do |blog|%>
  <div class="col">
      <div class="card" style="min-width: 25rem; min-height:30rem;">
        <img class="card-img-top" src="<%=blog.hero_image%>" alt="blog image">
        <div class="card-body">
          <h5 class="card-title"><%=blog.title%></h5>
          <p class="card-text"><%=blog.subtitle%></p>
          <a href="<%=admin_blog_path(@admin, blog)%>" class="btn btn-primary">See Full Blog</a>
        </div>
      </div>
  </div>
    <%end%>
</div>

